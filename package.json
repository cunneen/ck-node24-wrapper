{
  "author": "Mike Cunneen",
  "description": "A wrapper NPM module to abstract os-specific dependencies on @chilkat/ck-node24-* modules",
  "bin":{
    "ck-install": "./dist/installer/installChilkat.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@dotenvx/dotenvx": "^1.48.4",
    "@microsoft/api-extractor": "^7.52.10",
    "@types/node": "^24.2.1",
    "anylogger-console": "^1.0.0",
    "chai": "^5.2.1",
    "git-cliff": "^2.10.0",
    "husky": "^9.1.7",
    "mocha": "^11.7.1",
    "release-it": "^19.0.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=24"
  },
  "exports": {
    "import": "./dist/index.js"
  },
  "license": "MIT",
  "name": "ck-node24-wrapper",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cunneen/ck-node24-wrapper.git"
  },
  "scripts": {
    "build": "dotenvx run tsup -- --experimental-dts --publicDir --format esm",
    "clean": "rm -rf node_modules dist",
    "commitlint": "commitlint --edit",
    "prepare": "ck-install ; husky",
    "prerelease": "npm run build",
    "release": "dotenvx run release-it -- -i ",
    "release-changelog": "git-cliff --unreleased --prepend CHANGELOG.md --tag ",
    "test": "dotenvx run -- ./node_modules/.bin/mocha",
    "watch": "dotenvx run tsup -- --experimental-dts --publicDir --format esm --watch src --watch test --onSuccess 'npm run test'"
  },
  "tsup": {
    "clean": true,
    "entry": [
      "src/index.ts",
      "src/index.cts",
      "src/determineChilkatLibName.ts",
      "src/installer/installChilkat.ts"
    ],
    "sourcemap": true,
    "splitting": false
  },
  "type": "module",
  "types": "dist/index.d.cts",
  "version": "1.0.1",
  "dependencies": {
    "anylogger": "^1.0.11",
    "execa": "^9.6.0"
  }
}
